const { device } = Astro.props;
const size = device === "mobile" ? "h-4 w-4" : "h-[22px] w-6";
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  class={size}
  viewBox="0 0 24 22"
  fill="none"
>
  <path
    d="M1.99976 11L8.65858 18L21.9998 4"
    stroke="#2C7EF8"
    stroke-width="2.5"
